<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerVertical"
    android:orientation="vertical"
    android:showDividers="middle"
    android:background="#F2FFFF"
    tools:context="com.example.renzo.observatoryclient2.GenericActivity">

    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:background="#00A19C"
        android:editable="false"
        android:text="Genéricos."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_marginTop="2.5dp"
        android:layout_marginLeft="2.2dp"
        android:layout_height="25dp"
        android:textColor="#00A19C"
        android:text="Laboratorio: "
        android:editable="false"
        android:textSize="14sp"
        android:id="@+id/laboratory"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:layout_height="30dp"
        android:background="#00A19C"
        android:editable="false"
        android:text="Lista medicamentos genéricos."
        android:textColor="#FFFFFF"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="16sp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:divider="?android:attr/dividerVertical"
        android:orientation="vertical"
        android:showDividers="middle"
        android:background="#F2FFFF"
        android:id="@+id/genericsLayout">

        <ListView
            android:id="@+id/generics_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:background="#DEF0F8"
            android:divider="#00A19C"
            android:dividerHeight="2.5sp"
            android:choiceMode="singleChoice"
            android:clickable="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"/>
    </LinearLayout>

</LinearLayout>
